    "bunyan": "^1.8.14",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongodb": "^3.6.7",
    "randomstring": "^1.2.1",
    "regenerator-runtime": "^0.13.7",
    "smacker": "^0.1.3",
    "socket.io": "^4.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "eslint": "^7.7.0",
